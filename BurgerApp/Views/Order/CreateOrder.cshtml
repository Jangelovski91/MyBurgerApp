@using BurgerApp.DomainModels.Enums;
@model OrderViewModel

<h2>Create new Order!</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrderPost" method="post">
            <div class="form-group">
                <label asp-for="BurgerStore" class="control-label"></label>
                <input asp-for="BurgerStore" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select class="form-control" asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>

            </div>
            <div class="form-group">
                <label asp-for="Delivered" class="control-label"></label>
                <input type="checkbox" asp-for="BurgerStore" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" asp-items="@(new SelectList(ViewBag.Users, "ID", "FullName"))"></select>

            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>